
<div class="page-header">
  <h1>Anecdope</h1>
 </div>
 <%= link_to "New Paragraph", new_status_path %> 
 <br>
 <br>
 <% @statuses.each do |status| %>
<div class="status">
    <strong><%= status.name %></strong>
    <p><%= status.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
      <span class="admin">
        <%= link_to "Edit", edit_status_path(status) %> |
        <%= link_to "Rate this", status_path(status) %> |
         
      </span>
    </div>
</div>
 <% end %>
 

